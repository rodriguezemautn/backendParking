    <div class="card text-white bg-primary mb-3">
        <div class="card-header">Direcciones</div>
        <div class="card-body">
            <form action="{{#unless direccion.id}}/new-direccion{{else}}/update-direccion/{{direccion.id}}{{/unless}}"
                method="POST">

                <div class="row">
                    <div class="col">
                        <label for="Calle">Calle:</label>
                        <input type="number" name="Calle" placeholder="Calle" id="Calle" value="{{direccion.Calle}}"
                            class="form-control mb-2">
                    </div>
                </div>
                <div class="row">
                    <div>
                        <label for="entre1"> entre calle:</label>
                        <input type="number" name="entre1" placeholder="entre1" id="entre1" value="{{direccion.entre1}}"
                            class="form-control mb-2">
                    </div>
                    <div>
                        <label for="entre2">y calle:</label>
                        <input type="number" name="entre2" placeholder="entre2" id="entre2" value="{{direccion.entre2}}"
                            class="form-control mb-2">
                    </div>
                </div>
                <div class="row">
                    <!--<fieldset class="form-group">

                        <div class="form-check">
                            <input name="estado" type="radio" value="No hay lugar" />No hay Lugar
                        </div>
                        <div class="form-check">
                            <input name="estado" type="radio" value="Ultimo lugar" />Ultimo Lugar
                        </div>
                        <div class="form-check">
                            <input name="estado" type="radio" value=2 /> 2
                            <input name="estado" type="radio" value=3 /> 3
                            <input name="estado" type="radio" value="Mas de 4" /> +4
