    <table class="table table-hover table-sm table-striped">
        <thead>
            <tr>
                <th scope="col">Calle</th>
                <th scope="col">Entre calle</th>
                <th scope="col">y calle </th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#if direcciones}}
            {{#each direcciones}}
            <tr class="table-primary">
                <td>{{Calle}}</td>
                <td>{{entre1}} </td>
                <td>{{entre2}}</td>
                <td>{{estado}}</td>
                <td>
                    <a href="/delete-direccion/{{id}}">Delete</a>
                    <a href="/edit-direccion/{{id}}">Edit</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr class="table-danger">
                <td>No existen direcciones publicadas</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
